@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MvcApplication1.Models.BulbPuzzleModel

<h2>Bulb Puzzle Runner</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(m => m.NumberOfPeople)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.NumberOfPeople)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => Model.NumberOfBulbs)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.NumberOfBulbs)
        </div>
        @if (Model != null && Model.NumberOfBulbsOn > 0)
        {
        <div class="editor-label">
            @Html.LabelFor(m => Model.NumberOfBulbsOn)
        </div>
            <div class="editor-field">
                @Html.DisplayFor(m => Model.NumberOfBulbsOn)
            </div>
                <div class="editor-label">
                    Bulbs On
                </div>
                <div class="editor-field">
                    @Html.DisplayFor(mbox => Model.BulbsOn)
                </div>
        }
        <p><input type="submit" value="Submit"/></p>
    </fieldset>
}
